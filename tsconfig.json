{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "lib": ["ES6"],
    "sourceMap": true,
    "strict": false,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "rootDir": "src",
    "outDir": "dist",
    "skipLibCheck": true,
    "noEmitOnError": false
  },
  "include": ["src/**/*", ".env"]
}
